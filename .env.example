# Required
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE # For most AI ops -- Format: sk-ant-api03-... (Required)
PERPLEXITY_API_KEY=YOUR_PERPLEXITY_API_KEY_HERE # For research -- Format: pplx-abcde (Optional, Highly Recommended)

# Podcast Search APIs
LISTENNOTES_API_KEY=YOUR_LISTENNOTES_API_KEY_HERE # Required for Listen Notes search
PODSCAN_API_KEY=YOUR_PODSCAN_API_KEY_HERE     # Required for Podscan search

# MongoDB Connection
MONGO_DB_URI=YOUR_MONGODB_CONNECTION_URI_HERE # e.g., mongodb://user:password@host:port/
MONGO_DB_NAME=podcast_vetting_db # Optional: The name of the database to use

# Attio CRM Integration
ATTIO_API_KEY=YOUR_ATTIO_API_KEY_HERE # Required for Attio CRM API access
ATTIO_BASE_URL=https://api.attio.com/v2  # Attio API base URL
ATTIO_WORKSPACE_ID=YOUR_ATTIO_WORKSPACE_ID # Required for Attio CRM API access

# Optional - defaults shown
MODEL=claude-3-7-sonnet-20250219  # Recommended models: claude-3-7-sonnet-20250219, claude-3-opus-20240229 (Required)
PERPLEXITY_MODEL=sonar-pro        # Make sure you have access to sonar-pro otherwise you can use sonar regular (Optional)
MAX_TOKENS=64000                   # Maximum tokens for model responses (Required)
TEMPERATURE=0.2                   # Temperature for model responses (0.0-1.0) - lower = less creativity and follow your prompt closely (Required)
DEBUG=false                       # Enable debug logging (true/false)
LOG_LEVEL=info                    # Log level (debug, info, warn, error)
DEFAULT_SUBTASKS=5                # Default number of subtasks when expanding
DEFAULT_PRIORITY=medium           # Default priority for generated tasks (high, medium, low)
PROJECT_NAME=podcast_vetting_agent      # Project name for tasks.json metadata 